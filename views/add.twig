<div class="modal fade" id="modalAdd" aria-hidden="true" aria-labelledby="modalAdd" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAdd">Add Cron Job</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/action/add" onsubmit="formSubmit();return false;" autocomplete="off">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="link" class="form-label">Link</label>
                        <input type="url" class="form-control" id="link" name="link" required>
                    </div>
                    <div class="mb-3">
                        <label for="interval" class="form-label">Time Interval</label>
                        <input type="number" class="form-control" id="interval" name="interval" min="0" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>


<script>
    function buttonsDisabled(disabled) {
        const buttons = document.getElementsByTagName("button");
        for (let i = 0; i < buttons.length; i++)
            buttons[i].disabled = disabled;
    }

    function formSubmit() {
        buttonsDisabled(true);
        const form = document.querySelector("form");
        const formData = new URLSearchParams(new FormData(form)).toString();
        axios.post(form.getAttribute("action"), formData)
            .then(res => {
                showToast(res.data.status, res.data.message);
                if (res.data.status === "success")
                    setTimeout(() => {
                        window.location.reload();
                    }, 2500);
                else
                    buttonsDisabled(false);
            })
            .catch(error => {
                buttonsDisabled(false);
                showToast("error", "An error occurred!");
                console.log(error);
            });
    }
</script>

